<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="forgotPasswordPane" prefHeight="252.0" prefWidth="392.0" style="-fx-background-color: #FFEDFA;" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.flowermanagementsystem.resetpasswordController">
   <children>
      <Label fx:id="titleLabel" layoutX="34.0" layoutY="25.0" prefHeight="24.0" prefWidth="226.0" text="Forgot Password" textAlignment="CENTER">
         <font>
            <Font name="Montserrat SemiBold" size="19.0" />
         </font>
      </Label>
      <Label fx:id="usernameLabel" layoutX="34.0" layoutY="69.0" text="Enter new password:">
         <font>
            <Font name="Montserrat Medium" size="12.0" />
         </font>
      </Label>
      <PasswordField fx:id="newPasswordField" layoutX="34.0" layoutY="89.0" prefHeight="26.0" prefWidth="320.0" styleClass="passwordfield" stylesheets="@passwordreset.css" />
      <Label fx:id="confirmPasswordLabel" layoutX="34.0" layoutY="129.0" prefHeight="15.0" prefWidth="192.0" text="Confirm new password:">
         <font>
            <Font name="Montserrat Medium" size="12.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmPasswordField" layoutX="34.0" layoutY="149.0" prefHeight="26.0" prefWidth="320.0" styleClass="passwordfield" stylesheets="@passwordreset.css" />
      <Button fx:id="submitButton" layoutX="266.0" layoutY="193.0" mnemonicParsing="false" onAction="#handleSubmitButton" prefHeight="27.0" prefWidth="88.0" styleClass="login-btn" stylesheets="@passwordreset.css" text="Submit">
         <font>
            <Font size="9.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" layoutX="189.0" layoutY="193.0" mnemonicParsing="false" onAction="#handleCancelButton" prefHeight="27.0" prefWidth="69.0" styleClass="cancel-btn" stylesheets="@passwordreset.css" text="Cancel" />
      <Label fx:id="messageLabel" alignment="CENTER" layoutX="34.0" layoutY="175.0" prefHeight="15.0" prefWidth="320.0" textFill="#d32f2f">
         <font>
            <Font name="Montserrat Medium" size="10.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
